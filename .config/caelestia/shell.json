	},
	"services": {
		"weatherLocation": "-28.9348832,-49.4858389",
		"useFahrenheit": false
	},
	"session": {
		"dragThreshold": 30,
		"vimKeybinds": true,
		"commands": {
			"logout": [
				"killall",
				"Hyprland",
				""
			],
			"shutdown": [
				"systemctl",
				"poweroff"
			],
			"hibernate": [
				"systemctl",
				"suspend"
			],
			"reboot": [
				"systemctl",
				"reboot"
			]
		}
	}
