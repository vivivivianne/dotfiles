			"showWindows": false,
			"shown": 6
		}
	},
	"border": {
		"rounding": 16,
		"thickness": 12
	},
	"dashboard": {
		"mediaUpdateInterval": 500,
		"visualiserBars": 45
	},
	"launcher": {
		"actionPrefix": ">",
		"dragThreshold": 30,
		"enableDangerousActions": true,
		"maxShown": 8,
		"maxWallpapers": 9,
		"vimKeybinds": true,
		"useFuzzy": {
			"apps": false,
			"actions": false,
			"schemes": false,
			"variants": false,
			"wallpapers": false
		}
	},
	"lock": {
		"maxNotifs": 5
	},
